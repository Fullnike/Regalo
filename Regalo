    <script>
        function openGift() {
            const giftContainer = document.getElementById('gift');
            const giftButton = document.querySelector('.gift-button');
            
            // 1. Mostrar el regalo y cambiar el texto del bot贸n
            giftContainer.style.display = 'block';
            giftButton.textContent = '隆Tu regalo est谩 abierto!';
            giftButton.disabled = true; // Deshabilitar para evitar m煤ltiples clics
            
            // 2. Usar un peque帽o retraso para asegurar que el display:block se aplique
            setTimeout(() => {
                // 3. A帽adir la clase 'open' para disparar la animaci贸n CSS
                giftContainer.classList.add('open');
            }, 50);
        }
